<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:emp="http://empresa.com/empleado"
           xmlns:con="http://empresa.com/consultor"
           xmlns:dep="http://empresa.com/departamento"
           targetNamespace="http://empresa.com/registro"
           xmlns="http://empresa.com/registro"
           elementFormDefault="qualified">

  <xs:import namespace="http://empresa.com/empleado" schemaLocation="empleado.xsd"/>
  <xs:import namespace="http://empresa.com/consultor" schemaLocation="consultor.xsd"/>
  <xs:import namespace="http://empresa.com/departamento" schemaLocation="departamento.xsd"/>

  <xs:element name="registroPersonal">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="emp:empleados"/>
        <xs:element ref="con:consultores"/>
        <xs:element ref="dep:departamentos"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>
